{
  "version": 2,
  "name": "my-backend-project",
  "builds": [
    {
      "src": "src/app.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "src/app.js" }
  ],
  "env": {
    "JWT_SECRET": "Secret_Token"
  },
  "functions": {
    "src/app.js": {
      "memory": 1024,
      "maxDuration": 30
    }
  }
}